{
  "openapi": "3.0.0",
  "info": {
    "title": "API Users & Referentiels",
    "version": "1.0.0"
  },
  "servers": [
    {
        "url": "http://localhost:8000/api",
        "description": "Serveur Local"
    }
],
  "paths": {
    "/v1/users": {
      "post": {
        "tags": ["Users"],
        "summary": "Ajout d'un utilisateur",
        "operationId": "storeUser",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Utilisateur créé avec succès"
          },
          "400": {
            "description": "Erreur dans les données"
          }
        }
      },
      "get": {
        "tags": ["Users"],
        "summary": "Lister les utilisateurs",
        "operationId": "listUsers",
        "responses": {
          "200": {
            "description": "Liste des utilisateurs"
          }
        }
      }
    },
    "/v1/users/{id}": {
      "get": {
        "tags": ["Users"],
        "summary": "Recherche utilisateur par ID",
        "operationId": "getUserById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Utilisateur trouvé"
          },
          "404": {
            "description": "Utilisateur non trouvé"
          }
        }
      },
      "patch": {
        "tags": ["Users"],
        "summary": "Mise à jour utilisateur",
        "operationId": "updateUser",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Utilisateur mis à jour"
          }
        }
      }
    },
    "/v1/Auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Connexion utilisateur",
        "operationId": "login",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Login"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Connexion réussie"
          },
          "401": {
            "description": "Identifiants invalides"
          }
        }
      }
    },
    "/v1/referentiels": {
      "post": {
        "tags": ["Referentiels"],
        "summary": "Ajout d'un référentiel",
        "operationId": "storeReferentiel",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Referentiel"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Référentiel créé avec succès"
          }
        }
      },
      "get": {
        "tags": ["Referentiels"],
        "summary": "Lister les référentiels actifs",
        "operationId": "getActiveReferentiels",
        "responses": {
          "200": {
            "description": "Liste des référentiels actifs"
          }
        }
      }
    },
    "/v1/referentielsStatut": {
      "post": {
        "tags": ["Referentiels"],
        "summary": "Lister les référentiels par statut",
        "operationId": "getReferentielsByStatus",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "status": {
                    "type": "string",
                    "description": "Statut du référentiel (Actif, Inactif, Archivé)"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Liste des référentiels par statut"
          }
        }
      }
    },
    "/v1/referentielsAll": {
      "get": {
        "tags": ["Referentiels"],
        "summary": "Lister tous les référentiels",
        "operationId": "getAllReferentiels",
        "responses": {
          "200": {
            "description": "Liste de tous les référentiels"
          }
        }
      }
    },
    "/v1/referentiels/{id}": {
      "get": {
        "tags": ["Referentiels"],
        "summary": "Filtrer par compétences et modules",
        "operationId": "getReferentielById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Liste des compétences et modules"
          }
        }
      },
      "patch": {
        "tags": ["Referentiels"],
        "summary": "Mise à jour d'un référentiel",
        "operationId": "updateReferentiel",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Referentiel"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Référentiel mis à jour"
          }
        }
      },
      "delete": {
        "tags": ["Referentiels"],
        "summary": "Supprimer un référentiel (soft delete)",
        "operationId": "deleteReferentiel",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Référentiel supprimé"
          }
        }
      }
    },
    "/v1/archive/referentiels": {
      "get": {
        "tags": ["Referentiels"],
        "summary": "Lister les référentiels supprimés",
        "operationId": "getArchivedReferentiels",
        "responses": {
          "200": {
            "description": "Liste des référentiels archivés"
          }
        }
      }
    },
    "/v1/promotions": {
      "post": {
        "tags": ["Promotions"],
        "summary": "Ajout d'une promotion",
        "operationId": "storePromotion",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Promotion"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Promotion créée avec succès"
          }
        }
      },
      "get": {
        "tags": ["Promotions"],
        "summary": "Lister les promotions",
        "operationId": "listPromotions",
        "responses": {
          "200": {
            "description": "Liste des promotions"
          }
        }
      }
    },
    "/v1/promotions/{id}": {
      "put": {
        "tags": ["Promotions"],
        "summary": "Modifier une promotion",
        "operationId": "updatePromotion",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Promotion"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Promotion mise à jour"
          }
        }
      }
    },
    "/v1/apprenants": {
      "post": {
        "tags": ["Apprenants"],
        "summary": "Ajout d'un apprenant",
        "operationId": "storeLearner",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Learner"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Apprenant créé avec succès"
          }
        }
      },
      "get": {
        "tags": ["Apprenants"],
        "summary": "Lister les apprenants",
        "operationId": "listLearners",
        "responses": {
          "200": {
            "description": "Liste des apprenants"
          }
        }
      }
    },
    "/v1/apprenants/{id}": {
      "get": {
        "tags": ["Apprenants"],
        "summary": "Obtenir un apprenant par ID",
        "operationId": "getLearnerById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Apprenant trouvé"
          },
          "404": {
            "description": "Apprenant non trouvé"
          }
        }
      },
      "patch": {
        "tags": ["Apprenants"],
        "summary": "Mise à jour d'un apprenant",
        "operationId": "updateLearner",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Learner"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Apprenant mis à jour"
          }
        }
      },
      "delete": {
        "tags": ["Apprenants"],
        "summary": "Supprimer un apprenant (soft delete)",
        "operationId": "deleteLearner",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Apprenant supprimé"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "email": { "type": "string" },
          "password": { "type": "string" }
        },
        "required": ["name", "email", "password"]
      },
      "Login": {
        "type": "object",
        "properties": {
          "email": { "type": "string" },
          "password": { "type": "string" }
        },
        "required": ["email", "password"]
      },
      "Referentiel": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "description": { "type": "string" },
          "status": { "type": "string" }
        },
        "required": ["title"]
      },
      "Promotion": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "discount": { "type": "number" }
        },
        "required": ["name", "discount"]
      },
      "Learner": {
        "type": "object",
        "properties": {
          "firstName": { "type": "string" },
          "lastName": { "type": "string" },
          "email": { "type": "string" }
        },
        "required": ["firstName", "lastName", "email"]
      }
    }
  }
}
